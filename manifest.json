{
  "name": "PredictIt Streamliner",
  "short_name": "PI-streamliner",
  "version": "0.0.0.6",
  "manifest_version": 2,
  "description": "Make PI cleaner.",
  "permissions": [ "*://www.predictit.org/*","activeTab","tabs","webNavigation","webRequest","storage"],
  "web_accessible_resources": ["icons/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://projects.fivethirtyeight.com/trump-approval-ratings/*"],
      "js": ["538approval.js"]
    },
    {
      "matches": ["https://projects.fivethirtyeight.com/congress-generic-ballot-polls/*"],
      "js": ["538generic.js"]
    }
  ]
}
